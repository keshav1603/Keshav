import turtle

def draw_square(some_turtle):
    for i in range(0,4):
        some_turtle.forward(100)
        some_turtle.right(90)
def draw_art():

    window = turtle.Screen()
    window.bgcolor("green")


    jack = turtle.Turtle()
    jack.shape("turtle")
    jack.color("blue")
    jack.speed(15)


    for i in range (0, 50):
        draw_square(jack)
        jack.right(8)


    window.exitonclick()

draw_art()
