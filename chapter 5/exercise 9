
import turtle

def draw_bar(t, height, negative):
    """ Get turtle t to draw one bar, of height. """
    t.begin_fill()
    t.left(90)
    t.forward(height)
    t.penup()
    t.forward(negative)
    t.write("  "+ str(height))
    t.backward(negative)
    t.pendown()
    t.right(90)
    t.forward(40)
    t.right(90)
    t.forward(height)
    t.left(90)
    t.end_fill()
    t.penup()
    t.forward(10)
    t.pendown()

wn = turtle.Screen()
wn.bgcolor("lightgreen")

tess = turtle.Turtle()
tess.color("blue", "red")
tess.pensize(3)

xs = [-20, 48,117,200,240,160,260,220]
n = 0
for a in xs:
    if a < 0:
        n = -11
    else:
        n = 0
    draw_bar(tess, a, n)

turtle.done()
