
import turtle

def draw_bar(t, height):
    """ Get turtle t to draw one bar, of height. """
    t.begin_fill()
    t.left(90)
    t.forward(height)
    t.write("  "+ str(height))
    t.right(90)
    t.forward(40)
    t.right(90)
    t.forward(height)
    t.left(90)
    t.end_fill()
    t.penup()
    t.forward(10)
    t.pendown()

wn = turtle.Screen()
wn.bgcolor("lightgreen")

tess = turtle.Turtle()
tess.pensize(3)

xs = [48,117,200,240,160,260,220]



for a in xs:

    if a >= 200:
        colour = "red"
    elif a >= 100 and a < 200:
        colour = "yellow"
    else:
        colour = "green"

    tess.color("blue", colour)
    draw_bar(tess, a)


turtle.done()
