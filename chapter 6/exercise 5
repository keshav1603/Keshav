  
#Can your day_add function already work with negative deltas? For example, -1 would be yesterday, or -7 would be a week ago:

def day_num(x):
    if x == "Monday":
        return 0
    elif x == "Tuesday":
        return 1
    elif x == "Wednesday":
        return  2
    elif x == "Thursday":
        return 3
    elif x == "Friday":
        return 4
    elif x == "Saturday":
        return 5
    elif x == "Sunday":
        return 6
    else:
        return "None"


def day_name(x):
    if x == 0:
        return "Monday"
    elif x == 1:
        return "Tuesday"
    elif x == 2:
        return "Wednesday"
    elif x == 3:
        return "Thursday"
    elif x == 4:
        return "Friday"
    elif x == 5:
        return "Saturday"
    elif x == 6:
        return "Sunday"
    else:
        return "None"


def day_add(x, y):
    n = (x + y) % 7
    return n


day = raw_input("What day is it?")
add = int(input("Add day"))


present_day = day_num(day)


day_added = day_add(present_day, add)


day_after = day_name(day_added)

print(day_after)
