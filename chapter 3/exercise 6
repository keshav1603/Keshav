# draw an equilateral triangle
import turtle

wn = turtle.Screen()
fatty = turtle.Turtle()

for i in range(3):
    fatty.forward(100)

    # the angle of each vertice of a regular polygon
    # is 360 divided by the number of sides
    fatty.left(360/3)

wn.exitonclick()


# draw a square
import turtle

wn = turtle.Screen()
kishywishy = turtle.Turtle()

for i in range(4):
    kishywishy.forward(100)
    kishywishy.left(360/4)

wn.exitonclick()

# draw a hexagon
import turtle

wn = turtle.Screen()
ruckruckaali = turtle.Turtle()

for i in range(6):
    ruckruckaali.forward(100)
    ruckruckaali.left(360/6)

wn.exitonclick()


# draw an octogon
import turtle

wn = turtle.Screen()
tun = turtle.Turtle()

for i in range(8):
    tun.forward(75)
    tun.left(360/8)

wn.exitonclick()
